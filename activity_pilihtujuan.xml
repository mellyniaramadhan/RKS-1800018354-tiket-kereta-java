<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pilihtujuan"
    android:background="#83DEFF">

    <TextView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:text="Kereta Api Indonesia"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="90px"
        android:textColor="#FFFFFF"
        android:background="#00"/>


    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="220dp"
        android:src="@drawable/tujuan"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="155dp"
        android:src="@drawable/asal"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="285dp"
        android:src="@drawable/tanggal"/>


    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="345dp"
        android:src="@drawable/penumpang"/>


    <EditText
        android:id="@+id/asal"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="140dp"
        android:background="#FFFFFF"
        android:hint="Pilih Stasiun Asal"
        android:inputType="text"/>

    <EditText
        android:id="@+id/tujuan"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="140dp"
        android:background="#FFFFFF"
        android:hint="Pilih Stasiun Tujuan"
        android:inputType="text"/>

    <EditText
        android:id="@+id/tanggal"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="285dp"
        android:layout_marginLeft="140dp"
        android:background="#FFFFFF"
        android:hint="Pilih Tanggal"
        android:inputType="text"/>

    <EditText
        android:id="@+id/jumlah"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="345dp"
        android:layout_marginLeft="140dp"
        android:background="#FFFFFF"
        android:hint="Jumlah Penumpang"
        android:inputType="text"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/masuk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="470dp"
            android:background="#2FB53D"
            android:text="CARI"
            android:textColor="#FFFFFF"
            android:textSize="100px" />

    </GridLayout>

</RelativeLayout>