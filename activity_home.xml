<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home"
    android:padding="10dp"
    android:background="#83DEFF">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#16697A"
            android:gravity="center"
            android:text="Home"
            android:textColor="@android:color/white"
            android:textSize="30dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/user"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="20dp"
            android:background="#FFFFFF"
            android:hint="Lainnya"
            android:inputType="text"
            android:paddingLeft="10dp" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:columnCount="2"
            android:rowCount="1">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/pesawat"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:src="@drawable/airplane" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/train"
                android:onClick="@+id/pilih"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:src="@drawable/kereta" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/makan"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:src="@drawable/eats" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/mobil"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:src="@drawable/mobil" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/hotel"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:src="@drawable/hotel" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/experience"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:src="@drawable/experience" />

        </GridLayout>

    </LinearLayout>
</FrameLayout>